<!DOCTYPE mapper    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="br.com.cpdias.sb3.department.Mapper">
  <resultMap type="br.com.cpdias.sb3.department.Department" id="departmentMap">
    <id     column="ID"         property="id"/>
    <result column="NAME"       property="name"/>
    <result column="ATIVO"     property="active"/>
  </resultMap>

  <select id="select_all" resultMap="departmentMap">
    SELECT
      DEPT.ID,
      DEPT.NAME,
      DEPT.ATIVO
    FROM
      DEPARTMENTS DEPT
  </select>

  <insert id="insert" parameterMap="Department">
    INSERT
      INTO DEPARTMENTS INTO
      (ID, NAME, ATIVO)
      VALUES
      (#{id}, #{name}, #{active})
  </insert>

</mapper>